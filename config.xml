<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>Bahwan CyberTek</name>

    <description>
        AD's BCT App
    </description>
    <gap:splash src="splash-logo.jpg"   />
	<preference name="SplashScreen" value="screen" />
	<preference name="SplashScreenDelay" value="10000" />
    <author href="https://bahwancybertek.com" email="anandhu.d@bahwancybertek.com">
        Anandhu Dhanapal 
    </author>
    <icon src="logoicon.png" />
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="Camera">
	<param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <gap:plugin name="org.apache.cordova.camera" version="0.2.9" />

	<gap:plugin name="org.apache.cordova.dialogs" version="0.2.6" />

	<gap:plugin name="org.apache.cordova.file" version="1.0.1" />

	<gap:plugin name="org.apache.cordova.media-capture" version="0.2.8" />

     <content src="http://www.bahwancybertek.com/bctmobile/index.php" />
     <access origin="*" />

</widget>
